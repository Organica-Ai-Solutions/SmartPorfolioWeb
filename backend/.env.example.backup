# Environment (development, staging, production)
ENV=development

# Trading Mode (paper, live)
TRADING_MODE=paper

# Paper Trading Credentials
ALPACA_PAPER_API_KEY=your_paper_api_key_here
ALPACA_PAPER_SECRET_KEY=your_paper_secret_key_here
ALPACA_PAPER_BASE_URL=https://paper-api.alpaca.markets

# Live Trading Credentials (only needed if TRADING_MODE=live)
ALPACA_LIVE_API_KEY=your_live_api_key_here
ALPACA_LIVE_SECRET_KEY=your_live_secret_key_here
ALPACA_LIVE_BASE_URL=https://api.alpaca.markets

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,https://organica-ai-solutions.github.io

# Logging
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=4
API_TIMEOUT=60

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Security
API_KEY_HEADER=X-API-Key
ALLOWED_HOSTS=["*"]  # For production, specify actual hosts

# API Keys
POLYGON_API_KEY=your_polygon_api_key	
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database

# Security
SECRET_KEY=your_secret_key_for_jwt
ENCRYPTION_KEY=your_encryption_key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# DeepSeek AI Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key
DEEPSEEK_API_URL=https://api.deepseek.com/v1

# Server Configuration
HOST=0.0.0.0

# Proxy Configuration
USE_TOR_PROXY=false 